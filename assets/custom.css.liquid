.container, .shopify-policy__container{
  max-width: 1200px;
  width: 100%;
  margin: 0 auto;
  padding-left: 20px;
  padding-right: 20px;
}
@media screen and (min-width: 1201px){
 .container, .shopify-policy__container{
    padding-left: 0;
    padding-right: 0;
 }
}
@media screen and (min-width: 1500px){
  .container, .shopify-policy__container{ max-width: 1440px; }
}

/* Header */
.header__secondary-nav svg {
  max-height: 22px;
}
/* Footer */
.footer_logo {
  padding-bottom: 30px;
}
.footer__aside p {
  text-transform: capitalize;
}
.footer__aside {
  border-top: 1px solid #1C1C1C;
  padding-top: 20px;
  padding-bottom: 20px;
}
.footer-share{
  display: flex;
  justify-content: space-between;
}
.footer-instagram a.tap-area {
  display: flex;
}
.footer-instagram a.tap-area svg {
  margin-right: 10px;
}