@font-face {
    font-family: 'darinaregular';
    src: url('https://cdn.shopify.com/s/files/1/0823/0302/5461/files/darina_regular-webfont.woff2?v=1696253539') format('woff2'),
         url('https://cdn.shopify.com/s/files/1/0823/0302/5461/files/darina_regular-webfont.woff?v=1696253539') format('woff');
    font-weight: normal;
    font-style: normal;

}
/* Animation */
.animate{
  position: relative;
  opacity: 0;
}
.animated{
  opacity: 1;
  transition: .5s;
  -webkit-animation-delay: 20ms;
  animation-delay: 20ms;
}
.show_up{ top: 20px; }
.show_up.animated{
  top: 0;
}
.slide_left{ right: -20px; }
.slide_left.animated{ right: 0px; }
.slide_right{ left: -20px; }
.slide_right.animated{ left: 0px; }

.animated.ad-1{
  transition: 1s;
  -webkit-animation-delay: 30ms;
  transition-delay: 30ms;
}
.animated.ad-1-5{
  transition: 1.5s;
  -webkit-animation-delay: 60ms;
  animation-delay: 60ms;
}
.animated.ad-2{
  transition: 2s;
  -webkit-animation-delay: 90ms;
  animation-delay: 90ms;
}
.animated.ad-2-5 {
  transition: 2.5s;
  -webkit-animation-delay: 110ms;
  animation-delay: 110ms;
}
.animated.ad-3 {
  transition: 3s;
  -webkit-animation-delay: 120ms;
  animation-delay: 120ms;
}
/* Comman css */
.page-dots{
    --dot-size: 0.625rem;
}
/* Heading */
.sec_heading {
  text-transform: none;
  font-family: var(--head-font-family);
  font-size: 1.5rem;
  letter-spacing: 0;
}
.sub_heading {
  font-size:var(--text-h4);
}
@media screen and (min-width: 1000px){
 .sec_heading {
   font-size: 2.5rem;
 }
}
.container, .shopify-policy__container{
  max-width: 1200px;
  width: 100%;
  margin: 0 auto;
  padding-left: 20px;
  padding-right: 20px;
}
@media screen and (min-width: 1201px){
 .container, .shopify-policy__container{
    padding-left: 0;
    padding-right: 0;
 }
}
@media screen and (min-width: 1500px){
  .container, .shopify-policy__container{ max-width: 1440px; }
}

/* Header */
.header__secondary-nav svg {
  max-height: 22px;
}
.mega-menu__linklist li ul li a {
  text-transform: uppercase;
  color: rgb(var(--text-color) / 1);
  border-bottom: 1px solid rgba(28,28,28,0.3);
  width: 100%;
  display: block;
  padding-bottom: 10px;
}
.mega-menu__promo {
  position: relative;
}
.mega-menu__promo a,.mega-menu__promo p{
  color: #fff;
}
.mega-menu__linklist li ul {
  width: 100%;
}
.mega-menu{
  justify-content: space-between;
}
.mega-menu__promo p.h6{
  font-size: var(--text-h3);
}
.right-megamenu-image span{
  border-bottom: 1px solid #fff;
}
.mega-menu__linklist>li>a.h6 {
  font-size: var(--text-h4);
  text-transform: uppercase;
  font-family: var(--head-font-family);
  font-weight: 400;
  letter-spacing: 0.3px;
}
.mega-menu__linklist li ul li.stay-tune a {
  border-bottom: 0;
  color: #AFAFAF; 
}
.mega-menu__linklist li ul li:last-child a {
  border-bottom: 0;
}
.mega-menu__promo>*{
  max-width: 420px;
}
@media screen and (min-width: 700px){
  .megamenu-image {
    display: flex;
    position: absolute;
    bottom: 0;
    justify-content: space-between;
    text-align: left;
    align-items: flex-end;
    width: 100%;
    padding: 20px 20px;
  }
}
@media screen and (min-width: 999px){
  .right-megamenu-image span{
    border-bottom: 1px solid rgb(var(--text-color));
  }
}
/* Footer */
.footer_logo {
  padding-bottom: 30px;
}
.footer__aside p {
  text-transform: capitalize;
}
.footer__aside {
  border-top: 1px solid rgb(var(--text-primary));
  padding-top: 20px;
  padding-bottom: 20px;
}
.footer-share{
  display: flex;
  justify-content: space-between;
}
.footer-instagram a.tap-area {
  display: flex;
  color: rgb(var(--text-primary));
  align-items: center;
}
.footer-instagram a.tap-area svg {
  margin-right: 10px;
  height: 30px;
  width: 30px;
}
.social-media--list .social-media__item{
  opacity: 1;
}
.payment-methods {
  align-items: center;
}
.Footer__PaymentList {
  display: flex;
  gap: 5px;
  margin-left: 0px;
}
.Footer__PaymentList li {
  display: block;
}
footer .text-subdued {
  color: rgb(var(--text-color) / 1);
}
footer .footer_menu_link a {
  color: rgb(var(--text-color) / 1);
  text-transform: uppercase;
}
footer {
  border-top: 1px solid rgb(var(--text-color));
}
.footer__aside {
  text-align: left;
  display: block;
}
@media screen and (min-width: 1400px){
  .footer__block-list {
    column-gap: 10rem;
  }
}
@media screen and (min-width: 1150px){
  .footer__block-list {
    justify-content: flex-start;
  }
  footer .footer_menu_link {
    padding: 10px 0;
  }
}
@media screen and (max-width: 700px){
  .footer-share {
    flex-wrap: wrap;
  }
  .payment-methods {
    width: 100%;
    margin-top: 15px;
  }
  .footer_logo img {
    --image-max-width: 100px !important;
  }
}
/* Product page */
.product-gallery {
  gap: 1.5rem;
}
.product-title {
  text-transform: capitalize;
  font-weight: bold;
}
compare-at-price.text-subdued {
  color: #DCDBD6;
}
.variant-picker__option-info legend {
  text-transform: uppercase;
  font-weight: bold;
}
label.quantity-label {
  width: 100%;
  display: block;
  font-weight: bold;
  text-transform: uppercase;
}
.product-info__block-item[data-block-type="buy-buttons"] .buy-buttons > button {
  border: 1px solid #000;
  color: #2B2B2B;
}
.product-info__block-item[data-block-type="accordion"] .accordion__toggle span{
  font-weight: bold;
}
.product-info__block-item[data-block-type="accordion"] .accordion__content ul {
  margin-left: 30px;
}
.product-info__block-group.accordion-group[data-group-type="accordion-group"] {
  --product-info-gap: 2rem;
}
product-recommendations .sec_heading{
  letter-spacing: 4.2px;
}
.product-info__block-item[data-block-type="feature-with-icon"],.product-usp {
  max-width: 33.33%;
  flex: 0 0 33.33%;
  padding: 0 5px;
}
.product-usps {
  margin: 0 -5px;
}
.product-usps-main {
  display: flex;
}
.feature-badge{
  width: 100%;
  justify-content: center;
  padding: 0.7rem 0.5rem;
}
.feature-badge-list{
  gap: 0;
}
.product-info {
  --product-info-gap: 0rem;
}
/* ========= */
.complementary-products .price-list .text-subdued {
    color: #AFAFAF;
    font-size: 1.00rem;
}
.product-type{
  color: #AFAFAF;
  font-size: .90rem;
}
.complementary-products__header p{
  font-weight: bold;
}
.complementary-products {
  max-width: 100%;
}
.complementary-products .horizontal-product-card__figure {
    width: 9.25rem;
}
.complementary-products .view-product{
  text-transform: uppercase;
  font-weight: 500;
  letter-spacing: 2px;
  padding-top: 35px;
}
.complementary-products .product-title{
  font-size: 1.00rem;
}
sale-price.h6.text-subdued {
  color: #AFAFAF;
}
.top-arrow {
  text-align: center;
  margin: 0 auto;
}
.shopify-section--related-products {
  margin-top: 100px;
}
