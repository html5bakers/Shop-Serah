@font-face {
    font-family: 'darinaregular';
    src: url('https://cdn.shopify.com/s/files/1/0823/0302/5461/files/darina_regular-webfont.woff2?v=1696253539') format('woff2'),
         url('https://cdn.shopify.com/s/files/1/0823/0302/5461/files/darina_regular-webfont.woff?v=1696253539') format('woff');
    font-weight: normal;
    font-style: normal;

}
/* Animation */
.animate{
  position: relative;
  opacity: 0;
}
.animated{
  opacity: 1;
  transition: .5s;
  -webkit-animation-delay: 20ms;
  animation-delay: 20ms;
}
.show_up{ top: 20px; }
.show_up.animated{
  top: 0;
}
.slide_left{ right: -20px; }
.slide_left.animated{ right: 0px; }
.slide_right{ left: -20px; }
.slide_right.animated{ left: 0px; }

.animated.ad-1{
  transition: 1s;
  -webkit-animation-delay: 30ms;
  transition-delay: 30ms;
}
.animated.ad-1-5{
  transition: 1.5s;
  -webkit-animation-delay: 60ms;
  animation-delay: 60ms;
}
.animated.ad-2{
  transition: 2s;
  -webkit-animation-delay: 90ms;
  animation-delay: 90ms;
}
.animated.ad-2-5 {
  transition: 2.5s;
  -webkit-animation-delay: 110ms;
  animation-delay: 110ms;
}
.animated.ad-3 {
  transition: 3s;
  -webkit-animation-delay: 120ms;
  animation-delay: 120ms;
}
/* Comman css */
.container, .shopify-policy__container{
  max-width: 1200px;
  width: 100%;
  margin: 0 auto;
  padding-left: 20px;
  padding-right: 20px;
}
@media screen and (min-width: 1201px){
 .container, .shopify-policy__container{
    padding-left: 0;
    padding-right: 0;
 }
}
@media screen and (min-width: 1500px){
  .container, .shopify-policy__container{ max-width: 1440px; }
}

/* Header */
.header__secondary-nav svg {
  max-height: 22px;
}
.mega-menu__linklist li ul li a {
  text-transform: uppercase;
  color: rgb(var(--text-color) / 1);
  border-bottom: 1px solid rgba(28,28,28,0.3);
  width: 100%;
  display: block;
  padding-bottom: 10px;
}
.megamenu-image {
  display: flex;
  position: absolute;
  bottom: 0;
  justify-content: space-between;
  text-align: left;
  align-items: flex-end;
}
.mega-menu__promo {
  position: relative;
}
.mega-menu__promo a,.mega-menu__promo p{
  color: #fff;
}
.mega-menu__linklist li ul {
  width: 100%;
}
.mega-menu{
  justify-content: space-between;
}
.mega-menu__promo p.h6{
  font-size: var(--text-h3);
}
.right-megamenu-image span{
  border-bottom: 1px solid #fff;
}
.mega-menu__linklist>li>a.h6 {
  font-size: var(--text-h4);
  text-transform: uppercase;
  font-family: var(--head-font-family);
  font-weight: 400;
  letter-spacing: 0.3px;
}
.mega-menu__linklist li ul li.stay-tune a {
  border-bottom: 0;
  color: #AFAFAF;
}
.mega-menu__linklist li ul li:last-child a {
  border-bottom: 0;
}
/* Footer */
.footer_logo {
  padding-bottom: 30px;
}
.footer__aside p {
  text-transform: capitalize;
}
.footer__aside {
  border-top: 1px solid rgb(var(--text-primary));
  padding-top: 20px;
  padding-bottom: 20px;
}
.footer-share{
  display: flex;
  justify-content: space-between;
}
.footer-instagram a.tap-area {
  display: flex;
  color: rgb(var(--text-primary));
}
.footer-instagram a.tap-area svg {
  margin-right: 10px;
  height: 30px;
  width: 30px;
}
.social-media--list .social-media__item{
  opacity: 1;
}
.payment-methods {
  align-items: center;
}
.Footer__PaymentList {
  display: flex;
  gap: 5px;
  margin-left: 0px;
}
.Footer__PaymentList li {
  display: block;
}
footer .text-subdued {
  color: rgb(var(--text-color) / 1);
}
footer .footer_menu_link a {
  color: rgb(var(--text-color) / 1);
  text-transform: uppercase;
}
footer {
  border-top: 1px solid rgb(var(--text-color));
}
@media screen and (min-width: 1150px){
  .footer__block-list {
    justify-content: flex-start;
  }
}
@media screen and (min-width: 1400px){
  .footer__block-list {
    column-gap: 10rem;
  }
}