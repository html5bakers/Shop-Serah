.container, .shopify-policy__container{
  max-width: 1200px;
  width: 100%;
  margin: 0 auto;
  padding-left: 20px;
  padding-right: 20px;
}
@media screen and (min-width: 1201px){
 .container, .shopify-policy__container{
    padding-left: 0;
    padding-right: 0;
 }
}
@media screen and (min-width: 1500px){
  .container, .shopify-policy__container{ max-width: 1440px; }
}

/* Header */
.header__secondary-nav svg {
  max-height: 22px;
}
/* Footer */
.footer_logo {
  padding-bottom: 30px;
}
.footer__aside p {
  text-transform: capitalize;
}
.footer__aside {
  border-top: 1px solid rgb(var(--text-primary));
  padding-top: 20px;
  padding-bottom: 20px;
}
.footer-share{
  display: flex;
  justify-content: space-between;
}
.footer-instagram a.tap-area {
  display: flex;
  color: rgb(var(--text-primary));
}
.footer-instagram a.tap-area svg {
  margin-right: 10px;
  height: 30px;
  width: 30px;
}
.social-media--list .social-media__item{
  opacity: 1;
}
.payment-methods {
  align-items: center;
}
.Footer__PaymentList {
  display: flex;
  gap: 5px;
  margin-left: 0px;
}
.Footer__PaymentList li {
  display: block;
}
.footer__block li {
  text-transform: uppercase;
}
footer .text-subdued {
  color: rgb(var(--text-color) / 1);
}
@media screen and (min-width: 1150px){
  .footer__block-list {
    justify-content: flex-start;
  }
}
@media screen and (min-width: 1400px){
  .footer__block-list {
    column-gap: 10rem;
  }
}